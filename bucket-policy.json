{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowVPCLFlowLogsToPutObjects",
      "Effect": "Allow",
      "Principal": { "Service": "vpc-flow-logs.amazonaws.com" },
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::vpc-flow-logs-bucket-574026741766-ap-south-1/*",
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": "574026741766"
        },
        "ArnLike": {
          "aws:SourceArn": "arn:aws:logs:ap-south-1:574026741766:log-group:/aws/vpc/flow-logs/*"
        }
      }
    },
    {
      "Sid": "AllowGetBucketAcl",
      "Effect": "Allow",
      "Principal": { "Service": "vpc-flow-logs.amazonaws.com" },
      "Action": "s3:GetBucketAcl",
      "Resource": "arn:aws:s3:::vpc-flow-logs-bucket-574026741766-ap-south-1",
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": "574026741766"
        },
        "ArnLike": {
          "aws:SourceArn": "arn:aws:logs:ap-south-1:574026741766:log-group:/aws/vpc/flow-logs/*"
        }
      }
    }
  ]
}
